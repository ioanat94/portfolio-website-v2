---
import { Image } from 'astro:assets';
import headerImage from '../assets/header.webp';
import AboutMeIcon from './icons/AboutMeIcon.astro';
import ContactIcon from './icons/ContactIcon.astro';
import FavoriteStackIcon from './icons/FavoriteStackIcon.astro';
import RecentTechIcon from './icons/RecentTechIcon.astro';
import WorkExperienceIcon from './icons/WorkExperienceIcon.astro';

const navItems = [
  {
    href: '#about-me',
    icon: AboutMeIcon,
    ariaLabel: 'Link to about me section',
  },
  {
    href: '#work-experience',
    icon: WorkExperienceIcon,
    ariaLabel: 'Link to work experience section',
  },
  {
    href: '#favorite-stack',
    icon: FavoriteStackIcon,
    ariaLabel: 'Link to favorite stack section',
  },
  {
    href: '#recent-tech',
    icon: RecentTechIcon,
    ariaLabel: 'Link to recent tech section',
  },
  { href: '#contact', icon: ContactIcon, ariaLabel: 'Link to contact section' },
];
---

<aside
  class='flex flex-row sm:flex-col items-center space-x-4 sm:space-x-0 sm:space-y-4 sm:min-w-28 sticky top-0 sm:h-auto sm:p-4 px-6 py-4 justify-between sm:justify-normal z-10 bg-black'
>
  <a href='/' class='hover:opacity-80'
    ><Image src={headerImage} alt='Header image' width='60' /></a
  >
  {
    navItems.map((item) => (
      <a
        href={`/${item.href}`}
        class='hover:opacity-80'
        aria-label={item.ariaLabel}
      >
        <item.icon />
      </a>
    ))
  }
</aside>
